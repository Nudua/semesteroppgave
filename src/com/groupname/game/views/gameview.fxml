<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<GridPane fx:id="root" alignment="TOP_LEFT"  hgap="10" stylesheets="@css/game.css" prefHeight="720.0" prefWidth="1280.0"  vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupname.game.controllers.GameController">
    <children>
        <Canvas fx:id="canvas" height="720.0" width="1280.0" />
        <Button fx:id="pauseButton" onAction="#pauseButtonOnAction" focusTraversable="false" alignment="TOP_RIGHT" mnemonicParsing="false" text="Pause" GridPane.halignment="RIGHT" GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets right="4.0" top="4.0" />
            </GridPane.margin>
        </Button>
        <HBox styleClass="game-background" fx:id="loadingBox" visible="true" alignment="CENTER">
            <Label alignment="CENTER" minWidth="200" styleClass="loading-text">Loading ...</Label>
        </HBox>
    </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>

</GridPane>
